{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-fav-org/app-layout": ["libs/app-layout/src/index.ts"],
      "@my-fav-org/billing": ["libs/billing/src/index.ts"],
      "@my-fav-org/bliflo-routes": ["libs/bliflo-routes/src/index.ts"],
      "@my-fav-org/reports": ["libs/reports/src/index.ts"],
      "@my-fav-org/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
